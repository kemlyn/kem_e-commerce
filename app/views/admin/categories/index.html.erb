<h1 class="text-info">Your Categories</h1>
<hr class="my-6">

<table class="table">
  <thead>
    <tr>
      <th scope="col">Category name</th>
      <th scope="col">Id</th>
      <th scope="col">options</th>
    </tr>
  </thead>
  <tbody>
    <% @categories.each do |category| %>
    <tr>
      <td><%= category.name %></td>
      <td><%= category.category_id %></td>
      <td><%= link_to 'Show', admin_category_path(category), class: 'btn btn-outline-warning' %>
          <%= link_to 'Add New', new_admin_category_path(category), class: 'btn btn-outline-success'%>
          <%= link_to 'Edit', edit_admin_category_path(category), class: 'btn btn-outline-info' %>
          <%= link_to 'Destroy', admin_category_path(category), method: :delete, class: 'btn btn-outline-danger' %></td>
    </tr>
    <% end %>
  </tbody>
</table>
