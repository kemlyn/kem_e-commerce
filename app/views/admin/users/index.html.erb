<h1 class="text-info">Users On Site</h1>
<hr class="my-6">

<table class="table">
  <thead>
    <tr>
      <th scope="col">email address</th>
      <th scope="col">deleted?</th>
      <th scope="col">options</th>
    </tr>
  </thead>
  <tbody>
    <%@users.each do |user|%>
    <tr>
      <td><%=user.email%></td>
      <td><%=user.deleted_at%></td>
      <td>
        <%if user.deleted_at%>
        <%=link_to 'Restore User', restore_admin_user_path(user),class: 'btn btn-outline-info'%>
        <%else%>
        <%=link_to 'Delete User', admin_user_path(user), method: :delete, class: 'btn btn-outline-danger'%>
        <%end%>
      </td>
    </tr>
    <% end %>
  </tbody>
</table>
