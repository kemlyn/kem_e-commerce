<%= semantic_form_for [:admin,@product] do |f| %>
  <%= f.inputs do %>
    <%= f.input :name %>
    <%= f.input :description %>
    <%= f.input :stock %>
    <%= f.input :price %>
    <%= f.input :cost %>
  <% end %>
  <%= f.actions do %>
    <%= f.action :submit, as: :button %>
    <%= f.action :cancel, as: :link %>
  <% end %>
<% end %>
