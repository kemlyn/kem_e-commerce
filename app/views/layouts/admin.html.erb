<!DOCTYPE html>
<html>
  <head>
    <title>Admin</title>
    <%= csrf_meta_tags %>
    <meta charset="utf-8">
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
    <style media="screen">
      body{
        background-color: #e9ecefe3;
        padding: 10px;
      }
    </style>
  </head>

  <body>
    <div class="container-fluid">
      <div class="row">
        <div class=" col-lg-2">
          <nav class="hidden-xs-down bg-light sidebar" style="background-color: #e3f2fd;">
            <ul class="nav nav-pills flex-column">
             <%= link_to 'User Page', products_path, class: 'nav-item nav-link' %>
             <%= link_to 'categories', admin_category_path , class: 'nav-item nav-link' %>
           </ul>
         </nav>
        </div>
        <div class=" col-lg-10">
          <%= yield %>
        </div>
      </div>
    </div>
    <p class="notice"><%= notice %></p>
    <p class="alert"><%= alert %></p>
  </body>
</html>
