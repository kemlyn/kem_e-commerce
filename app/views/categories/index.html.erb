<h1 class="text-info">Your Categories</h1>
<hr class="my-6">

<table class="table">
  <thead>
    <tr>
      <th scope="col">Category name</th>
      <th scope="col">options</th>
    </tr>
  </thead>
  <tbody>
    <% @categories.each do |category| %>
    <tr>
      <td><%= category.name %></td>
      <td><%= link_to 'Show All', category_products_path(category), class: 'btn btn-outline-success' %></td>
    </tr>
    <% end %>
  </tbody>
</table>
